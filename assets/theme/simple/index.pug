html
  head
    meta(charset="utf8")
    title SuitArt Business Card
    - var stylesheetCommonLink = theme_common_resources + '/css/style.css'
    - var stylesheetLink = theme_path + '/css/simple.css'
    link(rel='stylesheet', href=stylesheetCommonLink)
    link(rel='stylesheet', href=stylesheetLink)
  body
    .container.mt-20.mb-20
      .row.border-bottom
        .col-8
          .header
            h1.header-title.mb-20
              span.text-block.text-first #{first_name}
              span.text-block.text-last #{last_name}
            h2.sub-title #{current_job_title}
        .col-4.text-right
          - var linkedIn = linkedin
          - var twitterLink = twitter
          - var facebookLink = facebook
          - var githubLink = github
          - var instagramLink = instagram
          ul.list-unstyled
            if linkedin
              li
                a(href=linkedIn, target='_blank')
                  p
                    i.fa.fa-linkedin-square.mr-5
                    small #{linkedIn}
            if twitter
              li
                a(href=twitterLink, target='_blank')
                  p
                    i.fa.fa-twitter-square.mr-5
                    small #{twitterLink}
            if facebook
              li
                a(href=facebookLink, target='_blank')
                  p
                    i.fa.fa-facebook-square.mr-5
                    small #{facebookLink}
            if github
              li
                a(href=githubLink, target='_blank')
                  p
                    i.fa.fa-github-square.mr-5
                    small #{githubLink}
            if instagram
              li
                a(href=instagramLink, target='_blank')
                  p
                    i.fa.fa-instagram.mr-5
                    small #{instagramLink}
      .row
        - var cityName = city
        - var countryName = country
        - var phoneNum = phone_1
        - var emailAddmail = "mailto:" + email
        - var emailAdd = email
        - var websiteLink = website
        if city && country
          .col-3
            h4 Location
            p #{cityName}, #{countryName}
        if phone_1
          .col-3
            h4 Phone
            p #{phoneNum}
        if email
          .col-3
            h4 Email
            p
              a(href=emailAddmail) #{emailAdd}
        .col-3
          h4 Website
          if website
            p
              a(href=websiteLink, target="_blank") #{websiteLink}
          else
            p -
